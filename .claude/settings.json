{
  "permissions": {
    "allow": [
      "WebFetch(domain:github.com)",
      "Bash(npm run build:*)",
      "Bash(npm test)",
      "Bash(npm run lint)",
      "Bash(npm run format:*)"
    ],
    "deny": []
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "jq -r '.tool_input.file_path | select(endswith(\".ts\"))' | xargs -r npx prettier --write"
          }
        ]
      }
    ]
  }
}
