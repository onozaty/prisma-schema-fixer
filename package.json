{
  "name": "@onozaty/prisma-schema-fixer",
  "version": "1.1.0",
  "description": "Fix schema.prisma according to the rules",
  "type": "module",
  "bin": {
    "prisma-schema-fixer": "./dist/cli.mjs"
  },
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "!dist/**/*.test.*"
  ],
  "scripts": {
    "build": "rm -rf dist/ && tsc --emitDeclarationOnly && node build.js",
    "prepare": "pnpm run build",
    "test": "vitest run",
    "test:cov": "vitest run --coverage",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write src/**/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/onozaty/prisma-schema-fixer.git"
  },
  "keywords": [
    "prisma"
  ],
  "author": "onozaty",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/onozaty/prisma-schema-fixer/issues"
  },
  "homepage": "https://github.com/onozaty/prisma-schema-fixer#readme",
  "dependencies": {
    "@prisma/internals": "^5.0.0 || ^6.0.0",
    "change-case": "^5.4.4",
    "commander": "^13.1.0",
    "pluralize": "^8.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "@types/node": "^22.13.4",
    "@types/pluralize": "^0.0.33",
    "@vitest/coverage-v8": "^3.0.6",
    "@vitest/eslint-plugin": "^1.1.36",
    "esbuild": "^0.25.0",
    "eslint": "^9.20.1",
    "globals": "^15.15.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.0",
    "vitest": "^3.0.6"
  }
}